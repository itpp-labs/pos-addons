<templates id="template" xml:space="preserve">
    <t t-name="PaypadButtonWidget">
        <button
            t-attf-class="paypad-button #{widget.cashregister.journal.debt and 'debt' or ''}"
            t-att-cash-register-id="widget.cashregister.id"
        >
           <t t-esc="widget.cashregister.journal.name" />
        </button>
    </t>

    <t t-name="CreditLine">
        <!--deb.balance value sign correlates with credit sign-->
        <div
            t-if="widget.pos.config.debt_type == 'debt' and deb.balance!=0"
            class="client-detail"
        >
            <span t-attf-class="label increased_width notbold client-debt">
                <t t-if='deb.journal_id'>
                    <t t-esc="deb.journal_id[1]" />
                </t>
            </span>
            <span
                t-attf-class="detail client-debt #{deb.balance lt 0 and 'positive' or deb.balance gt 0 and 'negative' or 'empty'}"
            >
                <t t-esc='widget.format_currency(- deb.balance)' />
            </span>
        </div>
        <div
            t-if="widget.pos.config.debt_type == 'credit' and deb.balance!=0"
            class="client-detail"
        >
            <span t-attf-class="label increased_width notbold detail client-credit">
                <t t-if='deb.journal_id'>
                    <t t-esc="deb.journal_id[1]" />
                </t>
            </span>
            <span
                t-attf-class="detail client-credit #{deb.balance gt 0 and 'positive' or deb.balance lt 0 and 'negative' or 'empty'}"
            >
                <t t-esc='widget.format_currency(deb.balance)' />
            </span>
        </div>
    </t>

    <t t-name="CreditList">
        <t t-foreach="_.values(debts)" t-as="deb">
            <t t-call="CreditLine" />
        </t>
    </t>

    <t t-extend="ClientDetails">
        <t t-jquery=".client-details-right" t-operation="after">
            <div class="client-details-debt">
                <!--<div t-if="widget.pos.config.debt_type == 'debt'" class="client-detail">-->
                <!--<span class='label'>Debts:</span>-->
                <!--</div>-->
                <!--<div t-if="widget.pos.config.debt_type == 'credit'" class="client-detail">-->
                <!--<span class='label'>Credits:</span>-->
                <!--</div>-->
                <div class="credit_list client-detail">
                    <t t-set="debts" t-value="partner.debts" />
                    <t t-if="debts" t-call="CreditList" />
                </div>
                <div
                    t-if="widget.pos.config.debt_type == 'debt'"
                    class="client-detail total"
                >
                    <span class='label increased_width'>Total Debt</span>
                    <b><span
                            t-attf-class="detail client-debt #{partner.debt gt 0 and 'positive' or partner.debt lt 0 and 'negative' or 'empty'}"
                        >
                        <t t-esc='widget.format_currency(partner.debt)' />
                    </span></b>
                </div>
                <div
                    t-if="widget.pos.config.debt_type == 'credit'"
                    class="client-detail total"
                >
                    <span class='label increased_width'>Total Credit</span>
                    <b><span
                            t-attf-class="detail client-debt #{partner.debt lt 0 and 'negative' or partner.debt gt 0 and 'positive' or 'empty'}"
                        >
                        <t t-esc='widget.format_currency(- partner.debt)' />
                    </span></b>
                </div>
            </div>
        </t>
        <t t-jquery=".client-details-box" t-operation="after">
            <div id="loading_history" class="o_spinner oe_hidden"><i
                    class="fa fa-spinner fa-spin fa-4"
                /></div>
        </t>
    </t>

    <t t-extend="ActionpadWidget">
        <t t-jquery="t[t-esc*='widget.pos.get_client().name']" t-operation="after">
            <br />
            <t t-set="client" t-value="widget.pos.get_client()" />
            <t t-if="client.debt">
                <t t-if="widget.pos.config.debt_type == 'debt'">
                    <span
                        t-attf-class="client-debt #{client.debt lt 0 and 'negative' or client.debt gt 0 and 'positive' or ''}"
                    >
                        <t
                            t-esc="(' [Debt: ' + widget.format_currency(client.debt) + ']' || '')"
                        />
                    </span>
                </t>
                <t t-if="widget.pos.config.debt_type == 'credit'">
                    <span
                        t-attf-class="client-credit #{client.debt lt 0 and 'positive' or client.debt gt 0 and 'negative' or ''}"
                    >
                        <t
                            t-esc="(' [Credit: ' + widget.format_currency(- client.debt) + ']' || '')"
                        />
                    </span>
                </t>
            </t>
        </t>
    </t>

    <t t-name="CreditNote">
        <t t-if="debt != 0">
            <t t-if="widget.pos.config.debt_type == 'debt'">
                <span
                    t-attf-class="client-debt #{(widget.pos.get_client() and debt gt 0) ? 'negative' : ''} #{(widget.pos.get_client() and debt lt 0) ? 'positive' : ''}"
                >
                    <t
                        t-esc="(widget.pos.get_client() ? ' [Debt: ' + (Math.round(debt * 100) / 100).toString() + ']': '')"
                    />
                </span>
            </t>
            <t t-if="widget.pos.config.debt_type == 'credit'">
                <span
                    t-attf-class="client-credit #{(widget.pos.get_client() and debt lt 0) ? 'positive' : ''} #{(widget.pos.get_client() and debt gt 0) ? 'negative' : ''}"
                >
                    <t
                        t-esc="(widget.pos.get_client() ? ' [Credit: ' + (- Math.round(debt * 100) / 100).toString() + ']': '')"
                    />
                </span>
            </t>
        </t>
    </t>

    <t t-extend="PaymentScreenWidget">
        <t t-jquery="t[t-if*='!widget.pos.get_client()']" t-operation="after">
            <span
                t-attf-class="client-debt #{(widget.pos.get_client() and widget.pos.get_client().debt lt 0) ? 'negative' : ''} #{(widget.pos.get_client() and widget.pos.get_client().debt gt 0) ? 'positive' : ''}"
            >
                <t
                    t-esc="(widget.pos.get_client() and widget.pos.config.debt_type == 'debt' ? ' [Debt: ' + (Math.round(widget.pos.get_client().debt * 100) / 100).toString() + ']': '')"
                />
            </span>
            <span
                t-attf-class="client-credit #{(widget.pos.get_client() and widget.pos.get_client().debt lt 0) ? 'positive' : ''} #{(widget.pos.get_client() and widget.pos.get_client().debt gt 0) ? 'negative' : ''}"
            >
                <t
                    t-esc="(widget.pos.get_client() and widget.pos.config.debt_type == 'credit' ? ' [Credit: ' + (- Math.round(widget.pos.get_client().debt * 100) / 100).toString() + ']': '')"
                />
            </span>
        </t>

        <t t-jquery=".js_set_customer" t-operation="after">
            <div class="button pay-full-debt oe_hidden">
                <i class='fa fa-money' /> Pay Full Debt
            </div>
        </t>

        <!--<t t-jquery=".screen-content" t-operation="after">-->
            <!--<t t-call="ValidationButton"/>-->
        <!--</t>-->

    </t>

    <t t-extend="ClientListScreenWidget">
        <t t-jquery=".button.next" t-operation="before">
            <div id="client_list_header_buttons">
                <span
                    id="show_debt_history"
                    class="button debt_notebook_button oe_hidden highlight"
                >
                    Show Debt History
                </span>
                <span
                    id="show_customers"
                    class="button debt_notebook_button oe_hidden highlight"
                >
                    Show Customers
                </span>
                <span
                    id="set-customer-pay-full-debt"
                    class="button debt_notebook_button oe_hidden highlight"
                >
                    Pay Full Debt
                </span>
            </div>
        </t>
        <t t-jquery="table.client-list tr" t-operation="append">
            <th id="client-list-debt">Debt</th>
            <th id="client-list-credit">Credit</th>
        </t>
        <t t-jquery="table.client-list" t-operation="after">
            <table id="debt_history" class='client-list oe_hidden'>
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>POS</th>
                        <th>Products</th>
                        <th>Credit Payments</th>
                        <th>Journal</th>
                        <th>Journal Balance</th>
                        <th>Total Balance</th>
                    </tr>
                </thead>
                <tbody id='debt_history_contents'>
                </tbody>
            </table>
        </t>
    </t>

    <t t-extend="ClientLine">
        <t t-jquery="tr.client-line" t-operation="append">
            <td
                t-attf-class="client-debt #{((widget.pos.config.debt_type == 'debt' and partner.debt lt 0) or (widget.pos.config.debt_type == 'credit' and partner.debt lt 0)) ? 'negative' : ''} #{((widget.pos.config.debt_type == 'debt' and partner.debt gt 0) or (widget.pos.config.debt_type == 'credit' and partner.debt gt 0)) ? 'positive' : ''}"
            >
                <t
                    t-if="widget.pos.config.debt_type == 'debt'"
                    t-esc='widget.format_currency(partner.debt)'
                />
                <t
                    t-if="widget.pos.config.debt_type == 'credit'"
                    t-esc='widget.format_currency(-partner.debt)'
                />
            </td>
        </t>
    </t>

    <t t-name="DebtHistoryLine">
        <tr>
            <td><t t-esc="line ? line.date : ''" /></td>
            <td><t t-esc="line ? line.config_id[1] : ''" /></td>
            <td><t t-esc="line ? line.product_list : ''" /></td>
            <td class="pos_text_center">
                <t
                    t-esc="line and line.balance ? widget.format_currency(line.balance) : ''"
                />
            </td>
            <td><t t-esc="line ? line.journal_code : ''" /></td>
            <td class="pos_text_center">
                <span
                    t-attf-class="client-credit #{(line and line.total_journal lt 0) ? 'negative' : ''} #{(line and line.total_journal gt 0) ? 'positive' : ''}"
                >
                    <t
                        t-esc="line and line.total_journal ? widget.format_currency(line.total_journal) : ''"
                    />
                </span>
            </td>
            <td class="pos_text_center">
                <span
                    t-attf-class="client-#{debt_type} #{(line and line.total_balance lt 0) ? 'negative' : ''} #{(line and line.total_balance gt 0) ? 'positive' : ''}"
                >
                    <t
                        t-esc="line and line.total_balance ? widget.format_currency(line.total_balance) : ''"
                    />
                </span>
            </td>
        </tr>
    </t>

    <t t-name="DebtHistoryLoadMore">
        <tr>
            <td colspan="6" class="pos_text_center">
                <div id="loading_history" class="o_spinner oe_hidden"><i
                        class="fa fa-spinner fa-spin fa-4"
                    /></div>
                <span id="load_more" class="button highlight">Load More</span>
            </td>
        </tr>
    </t>

    <t t-extend="XmlReceipt">
        <t t-jquery="t[t-if='receipt.cashier']" t-operation="after">
            <t t-if='receipt.client'>
                <div class='client'>
                    <div>--------------------------------</div>
                    <div>Customer: <t t-esc='receipt.client' /></div>
                </div>
            </t>
        </t>
        <t t-jquery=".before-footer" t-operation="before">
            <div t-if="receipt.debt_before or receipt.debt_after" class="debt">
                <t
                    t-set="debt_label"
                    t-value="receipt.debt_type=='debt' and 'Debt' or 'Credits'"
                />
                <t t-set="debt_sign" t-value="receipt.debt_type=='debt' and 1 or -1" />
                <line>
                    <left>Prev <t t-esc="debt_label" /></left>
                    <right><value><t
                                t-esc='debt_sign * receipt.debt_before'
                            /></value></right>
                </line>
                <line>
                    <left>New <t t-esc="debt_label" /></left>
                    <right><value><t
                                t-esc='debt_sign * receipt.debt_after'
                            /></value></right>
                </line>
            </div>

        </t>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery="table.receipt-paymentlines" t-operation="replace">
            <table class='receipt-paymentlines'>
                <t t-foreach='paymentlines' t-as='line'>
                    <t t-if="!line.cashregister.journal.credits_via_discount">
                        <tr>
                          <td>
                              <t t-esc="line.name" />
                          </td>
                          <td class="pos-right-align">
                              <t t-esc="widget.format_currency(line.get_amount())" />
                          </td>
                      </tr>
                    </t>
                </t>
            </table>
        </t>
        <t t-jquery="table.receipt-change" t-operation="replace">
            <t
                t-set="credits_via_discounts_presence"
                t-value="order.has_paymentlines_with_credits_via_discounts()"
            />
            <t
                t-set="credits_via_discounts_amount"
                t-value="Math.max(order.get_summary_for_discount_credits(), 0)"
            />
            <table class='receipt-change'>
                <tr><td>Change:</td><td class="pos-right-align">
                    <t t-esc="widget.format_currency(order.get_change())" />
                    </td></tr>
            </table>
            <t t-if="credits_via_discounts_presence.length">
                <left><pre>Payments by bonuses:</pre></left>
                <table class='receipt-paymentlines'>
                    <t t-foreach='credits_via_discounts_presence' t-as='line'>
                        <tr>
                          <td>
                              <t t-esc="line.name" />
                          </td>
                          <td class="pos-right-align">
                              <t t-esc="widget.format_currency(line.get_amount())" />
                          </td>
                      </tr>
                    </t>
                </table>
            </t>
        </t>
    </t>

    <t t-name="ValidationButton">
        <div class="bottom-left-content">
            <div class="button autopay">
                <div class="button-content">
                    <span class="title" />
                    <span>
                        <i class='fa fa-angle-double-right' />
                    </span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ThumbUpPopupWidget">
        <div class="modal-dialog thumb-up-modal">
            <div class="popup thumb-up-popup">
                <div class="container thumb-up-1">
                    <div class="icon-wrapper">
                        <span class="icon"><i class="fa fa-thumbs-up" /></span>
                        <div class="border"><span /></div>
                        <div class="satellite">
                            <span />
                            <span />
                            <span />
                            <span />
                            <span />
                            <span />
                        </div>
                    </div>
                </div>

                <div class="container thumb-up-2">
                    <div class="icon-wrapper-2">
                        <span class="icon"><i class="fa fa-thumbs-up" /></span>
                        <div class="border"><span /></div>
                        <div class="spark">
                            <span /><span /><span /><span />
                            <span /><span /><span /><span />
                            <span /><span /><span /><span />
                            <span /><span /><span /><span />
                            <span /><span /><span /><span />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
