<odoo>
        <record id="view_report_pos_debt_pivot" model="ir.ui.view">
            <field name="name">report.pos.debt.pivot</field>
            <field name="model">report.pos.debt</field>
            <field name="arch" type="xml">
                <pivot string="Debts / Credits Analysis">
                    <field name="partner_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="balance" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_report_pos_debt_graph" model="ir.ui.view">
            <field name="name">report.pos.debt.graph</field>
            <field name="model">report.pos.debt</field>
            <field name="arch" type="xml">
                <graph string="Point of Sale Analysis">
                    <field name="partner_id" type="row"/>
                    <field name="balance" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_report_pos_debt_tree" model="ir.ui.view">
            <field name="name">report.pos.debt.tree</field>
            <field name="model">report.pos.debt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="product_list"/>
                    <field name="date"/>
                    <field name="journal_id"/>
                    <field name="balance"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_report_pos_debt_form" model="ir.ui.view">
            <field name="name">report.pos.debt.form</field>
            <field name="model">report.pos.debt</field>
            <field name="arch" type="xml">
                <form string="Point of Sale Analysis">
                    <group>
                        <field name="order_id"/>
                        <field name="invoice_id"/>
                        <field name="update_id"/>
                        <field name="credit_product"/>
                        <field name="state"/>
                        <field name="journal_id"/>
                        <field name="partner_id"/>
                        <field name="date"/>
                        <field name="balance"/>
                        <field name="product_list"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_report_pos_debt_search" model="ir.ui.view">
            <field name="name">report.pos.debt.search</field>
            <field name="model">report.pos.debt</field>
            <field name="arch" type="xml">
                <search string="Point of Sale Analysis">
                    <field name="date"/>
                    <filter string="Open" domain="[('state','=','open')]"/>
                    <filter string="Closed" domain="[('state','=','confirm')]"/>
                    <separator/>
                    <filter string="Inbound" domain="[('balance','&gt;',0)]"/>
                    <filter string="Outbound" domain="[('balance','&lt;',0)]"/>
                    <separator/>
                    <filter string="This Year" name="year" domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]" help="POS ordered created during current year"/>
                    <filter string="Today" name="today" domain="[('date', '&gt;=',  datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <field name="config_id"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Journal" context="{'group_by':'journal_id'}"/>
                        <separator/>
                        <filter string="Salesperson" name="User" context="{'group_by':'user_id'}"/>
                        <filter string="Customer" context="{'group_by':'partner_id'}"/>
                        <separator/>
                        <filter string="Month" context="{'group_by':'date:month'}"/>
                        <filter string="Week" context="{'group_by':'date:week'}"/>
                        <filter string="Day" context="{'group_by':'date:day'}"/>
                        <filter string="Hour" context="{'group_by':'date:hour'}"/>
                    </group>
                </search>
            </field>
        </record>
