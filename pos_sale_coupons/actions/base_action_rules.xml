<odoo>
    <record id="coupon_update_pos_action" model="base.automation">
        <field name="name">Update Coupons</field>
        <field name="model_id" ref="sale_coupon.model_sale_coupon"/>
        <field name="state">code</field>
        <field name="code">
            record.action_updated_coupon()
        </field>
        <field name="trigger">on_create_or_write</field>
        <field name="active" eval="True"/>
    </record>

    <record id="coupon_program_update_pos_action" model="base.automation">
        <field name="name">Update Coupon Programs</field>
        <field name="model_id" ref="sale_coupon.model_sale_coupon_program"/>
        <field name="state">code</field>
        <field name="code">
            record.action_updated_coupon_program()
        </field>
        <field name="trigger">on_create_or_write</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
