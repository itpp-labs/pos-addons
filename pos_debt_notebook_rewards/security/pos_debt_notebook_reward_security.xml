<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--POS-->

    <record id="group_pos_service" model="res.groups">
        <field name="name">Service POS group</field>
        <field name="comment">Service pos group to gain the officer access to creating rewards without access to POS.</field>
    </record>

    <!--Reward Groups-->

    <record model="ir.module.category" id="module_category_attendance">
        <field name="name">Reward Attendance</field>
        <field name="description">Helps you reward the partner for attendances.</field>
        <field name="sequence">16</field>
    </record>

    <record id="group_reward_user" model="res.groups">
        <field name="name">Read-Only</field>
        <field name="category_id" ref="module_category_attendance"/>
        <field name="implied_ids" eval="[(4, ref('base_attendance.group_res_attendance'))]"/>
        <field name="comment">The user will gain access to see the attendance rewards menu.</field>
    </record>

    <record id="group_reward_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="module_category_attendance"/>
        <field name="implied_ids" eval="[(4, ref('pos_debt_notebook.group_pos_credit_update_manager')),
                                         (4, ref('group_reward_user')),
                                         (4, ref('group_pos_service'))]"/>
    </record>

    <record id="group_reward_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_attendance"/>
        <field name="implied_ids" eval="[(4, ref('group_reward_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('group_reward_manager'))]"/>
    </record>

</odoo>
