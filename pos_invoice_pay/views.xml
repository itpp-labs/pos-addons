<odoo>
        <record model="ir.ui.view" id="view_pos_config_form">
            <field name="name">pos.config.form.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='features']" position="after">
                    <group string="Pay Sale Orders &amp; Invoices" name="pos_invoice_pay">
                        <group>
                            <field name="show_invoices"/>
                            <field name="show_sale_orders"/>
                        </group>
                        <group>
                            <field name="invoice_cashier_selection" attrs="{'invisible':[('show_invoices','=',False)]}"/>
                            <field name="sale_order_cashier_selection" attrs="{'invisible':[('show_sale_orders','=',False)]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
