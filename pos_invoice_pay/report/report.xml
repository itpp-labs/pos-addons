<odoo>
    <template id="pos_invoice_pay_report" inherit_id="point_of_sale.report_saledetails">
        <xpath expr="//div[hasclass('page')]/strong" position="after">
            <br />
            <br />
            <h3>Paid Orders/Invoices</h3>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Invoice No</th>
                        <th>Sales Order(origin)</th>
                        <th>Customer</th>
                        <th>Cashier</th>
                        <th>Payment Method</th>
                        <th>Amount Total</th>
                        <th>Paid</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach='invoices' t-as='inv'>
                        <td>
                            <t t-esc="inv['invoice_no']" />
                        </td>
                        <td>
                            <t t-esc="inv['so_origin']" />
                        </td>
                        <td>
                            <t t-esc="inv['customer']" />
                        </td>
                        <td>
                            <t t-esc="inv['cashier']" />
                        </td>
                        <td>
                            <t t-esc="inv['payment_method']" />
                        </td>
                        <td>
                            <t t-esc="inv['amount_total']" />
                        </td>
                        <td>
                            <t t-esc="inv['amount']" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7" class="text-right">
                            <strong>Total:</strong>
                            <t t-esc="total_invoices" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
