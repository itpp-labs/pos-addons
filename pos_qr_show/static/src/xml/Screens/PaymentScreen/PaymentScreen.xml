<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t
        t-name="PaymentScreen"
        t-inherit="point_of_sale.PaymentScreen"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath
            expr="//div[hasclass('left-content')]/t[@t-if='env.isMobile']/section/PaymentScreenStatus"
            position="after"
        >
            <section class='qr-container' style='text-align: center' />
        </xpath>
        <xpath
            expr="//div[hasclass('right-content')]/t[@t-if='!env.isMobile']/section/PaymentScreenStatus"
            position="after"
        >
            <section class='qr-container' style='text-align: center' />
        </xpath>
    </t>
</templates>
