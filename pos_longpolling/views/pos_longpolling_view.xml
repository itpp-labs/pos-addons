<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_pos_config_form">
            <field name="name">pos.config.form.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//h2[@name='order']" position="before">
                <h2 namme="longpolling">Longpolling</h2>
                <div class="row mt16 o_settings_container" id="longpolling">
                  <div id="query_timeout" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                      <label for="query_timeout"/>
                      <div class="content-group mt16">
                        <field name="query_timeout" widget="float_time"/>
                      </div>
                    </div>
                  </div>
                  <div id="response_timeout" class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_right_pane">
                      <label for="response_timeout"/>
                      <div class="content-group mt16">
                        <field name="response_timeout" widget="float_time"/>
                      </div>
                    </div>
                  </div>
                </div>
              </xpath>
            </field>
        </record>
    </data>
</odoo>
