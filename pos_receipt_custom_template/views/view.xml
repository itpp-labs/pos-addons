<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='available_in_pos']" position="after">
                <field
                    name="second_product_name"
                    attrs="{'invisible': [('available_in_pos', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='iface_print_via_proxy']/.." position="after">
                <div
                    class="row"
                    attrs="{'invisible' : [('iface_print_via_proxy', '=', False)]}"
                >
                    <label
                        string="Custom Receipt"
                        for="custom_xml_receipt"
                        class="col-lg-3 o_light_label"
                    />
                    <field name="custom_xml_receipt" />
                </div>
                <div
                    class="row"
                    attrs="{'invisible' : ['|',('custom_xml_receipt', '=', False),('iface_print_via_proxy', '=', False)]}"
                >
                    <label
                        string="Custom Receipt Template"
                        for="custom_xml_receipt_id"
                        class="col-lg-3 o_light_label"
                    />
                    <field
                        name="custom_xml_receipt_id"
                        attrs="{'required': [('custom_xml_receipt', '=', True),('iface_print_via_proxy', '=', True)]}"
                    />
                </div>
            </xpath>
            <xpath expr="//div[@id='receipt']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_second_product_name_in_receipt" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_second_product_name_in_receipt" />
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_discount_in_receipt" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_discount_in_receipt" />
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="custom_ticket" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Custom Ticket" for="custom_ticket" />
                        <div
                            class="content-group"
                            attrs="{'invisible' : [('custom_ticket', '=', False)]}"
                        >
                            <div
                                class="row"
                                attrs="{'invisible' : [('custom_ticket', '=', False)]}"
                            >
                                <label
                                    string="Custom Ticket Template"
                                    for="custom_ticket_id"
                                    class="col-lg-3 o_light_label"
                                />
                                <field
                                    name="custom_ticket_id"
                                    attrs="{'required': [('custom_ticket', '=', True)]}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="pos_custom_receipt_form_view" model="ir.ui.view">
        <field name="name">pos.custom_receipt.view.form</field>
        <field name="model">pos.custom_receipt</field>
        <field name="arch" type="xml">
            <form string="Custom Receipt">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="type" required="1" />
                        <field
                            name="qweb_template"
                            widget="ace"
                            options="{'mode': 'xml'}"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
