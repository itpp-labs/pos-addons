                    <div><span
                            font='b'
                            bold='off'
                            line-ratio='0.4'
                            indent='1'
                            width='30'
                        >--- <t t-esc="changes.old_order_note" /></span></div>
                    <t t-foreach="changes.old_order_custom_notes" t-as="custom_note">
                        <div><span
                                font='b'
                                bold='off'
                                line-ratio='0.4'
                                indent='1'
                                width='30'
