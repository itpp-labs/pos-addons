<odoo>
    <record id="refund_form" model="ir.ui.view">
        <field name="name">alipay.refund.form</field>
        <field name="model">alipay.refund</field>
        <field name="arch" type="xml">
            <form string="Alipay Refund">
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,done"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="refund_ref" />
                        <field name="refund_fee" />
                        <field name="order_id" />
                        <field name="debug" />
                    </group>
                    <notebook>
                        <page string="Raw Response">
                            <field name="result_raw" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="refund_list" model="ir.ui.view">
        <field name="name">alipay.refund.list</field>
        <field name="model">alipay.refund</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="refund_ref" />
                <field name="refund_fee" />
            </tree>
        </field>
    </record>
    <record id="refund_search" model="ir.ui.view">
        <field name="name">alipay.refund.search</field>
        <field name="model">alipay.refund</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="refund_ref" />
                <filter string="Sandbox" domain="[('debug','=',True)]" />
                <filter string="Non-Sandbox" domain="[('debug','=',False)]" />
            </search>
        </field>
    </record>
    <record id="action_alipay_refund" model="ir.actions.act_window">
        <field name="name">Alipay Refund</field>
        <field name="res_model">alipay.refund</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
    </record>
    <menuitem
        action='action_alipay_refund'
        id='alipay_refund_menu'
        parent='root_alipay_menu'
        sequence='100'
    />
</odoo>
