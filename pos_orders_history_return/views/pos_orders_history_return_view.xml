<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_orders_history.view_pos_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='orders_history_actions']" position="inside">
                <field name="return_orders" attrs="{'invisible' : [('orders_history', '=', False)]}"/>
                <field name="show_returned_orders" attrs="{'invisible' : ['|', ('orders_history', '=', False),('return_orders', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
